/*Fazer um programa em C que pergunta um valor em metros e imprime o
correspondente em decímetros, centímetros e milímetros.*/

#include <stdio.h>

int main()
{
    float value;
    printf(": ");
    scanf("%f", &value);
    
    printf("dm      cm      mm\n");
    for(int i =0; i<3;i++){
        printf("%.2f ", value = value * 10);
    }
    
    return 0;
}
